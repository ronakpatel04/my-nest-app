datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
enum Role {
  ADMIN
  EDITOR
  USER
}

model User {
  id        String  @id @default(uuid())
  email     String  @unique
  password  String
  name      String?
  role      Role    @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
